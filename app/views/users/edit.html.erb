<div class="span-7">
  <h2>Member</h2>
</div>

<div class="span-15 leftborder last">
	<h3>Edit member</h3>
	<% form_for(@user) do |f| %>
	  <%= f.error_messages %>

	  <p>
	    <%= f.label :name %><br />
	    <%= f.text_field :name %>
	  </p>
	  <p>
	    <%= f.label :email %><br />
	    <%= f.text_field :email %>
	  </p>
	  <p>
	    <%= f.label :blog_url %><br />
	    <%= f.text_field :blog_url %>
	  </p>
	  <p>
	    <%= f.label :twitter_user %><br />
			<%= TWITTER_URL %>
	    <%= f.text_field :twitter_user %>
	  </p>
	  <p>
	    <%= f.label :github_user %><br />
	    <%= GITHUB_URL %>
			<%= f.text_field :github_user %>
	  </p>
	  <p>
	    <%= f.label :slideshare_user %><br />
	    <%= SLIDESHARE_URL %>
			<%= f.text_field :slideshare_user %>
	  </p>
	  <p>
	    <%= f.submit 'Update' %>
	  </p>
	<% end %>

	<%= link_to 'Show', @user %> |
	<%= link_to 'Back', users_path %>
</div>